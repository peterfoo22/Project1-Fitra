// put your styles here
$main-font: "Helvetica Neue", Arial, Helvetica, sans-serif;

$black: #000000;
$white: #ffffff;
$color-accent: #FF3700;
$color-text: #555555;

$line-global:20px;
$gutter-global:$line-global*2;

//Base

*{
  font-family: $main-font;
  box-sizing:border-box;
}

html,body{
  width: 100%;
  margin:0;
  padding: 0;
  color:$black;
  line-height: $line-global;
}

h1, h2, h3, h4, h5, h6, p{
  margin:0;
  padding:0;
}


//utility class

.grid{
  display:grid;
  grid-column-gap: $gutter-global;
  grid-row-gap: $gutter-global;
}

.two-columns{
   grid-template-columns: 1fr 1fr;
}

.main-content{
  min-height: 100vh;
  padding: $gutter-global;
  width:46%;
  margin-left: auto;
}

.valign-center{
  display:flex;
  flex-direction:column;
  justify-content:center;
}

.valign-bottom{
  display:flex;
  flex-direction:column;
  justify-content:flex-end;

}

.sticky-sideimage{
  position:fixed;
  left:0;
  top: $gutter-global;
  bottom:$gutter-global;
  width:50%;
}

.sticky-sideimage img{
  width:100%;
  height:100%;
  object-fit: cover;
}

.headline{
  padding-bottom: $line-global * 3;
}

.singleproductimage{
  width:100%;
  height:100%;
}

//Index Page CSS Files

#product-info{
  grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
}



