// put your styles here
$main-font: "Helvetica Neue", Arial, Helvetica, sans-serif;

$black: #000000;
$white: #ffffff;
$color-accent: #FF3700;
$color-text: #555555;
$color-border: #DEDEDE;
$color-label:#707070;
$label-font-size:12px;

$standard-border: 1px solid $color-border;
$black-border: 1px solid black;

$line-global:20px;
$gutter-global:$line-global*2;

$body-font-size:15px;

@mixin reset-input {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    -text-align: left;
}

//Base

*{
  font-family: $main-font;
  box-sizing:border-box;
}

html,body{
  width: 100%;
  margin:0;
  padding: 0;
  color:$black;
  line-height: $line-global;
}

h1, h2, h3, h4, h5, h6, p, ul, ol{
  margin:0;
  padding:0;
  font-weight: 400;
}

p, ul, ol{
  font-size: $body-font-size;
  line-height: $line-global;
  color: $color-text;
}


h2{
  font-size: $body-font-size*2;
  line-height: $line-global;
}

h3{
  font-size:$body-font-size;
  line-height: $line-global;
}

a {
  text-decoration: none;
}

label{
  font-size: $label-font-size;
  color:$color-label;

}

.styled-select{
  position:relative;
}

.styled-select select{
  @include reset-input;
  width:100%;
  font-size: $body-font-size;
  line-height: $line-global;
  padding:$line-global;
  border:$black-border;
}

.styled-select .select-arrow{
  position: absolute;
  top:0;
  right:0;
  width:$line-global*3;
  bottom:0;
  text-align:center;
  line-height: $line-global*3;
  border-left:$black-border;
  pointer-events: none;
}

.styled-select .select-arrow img{
  display:inline-block;
  vertical-align: middle;
  width:16px;
  height:16px;
}

button{
  @include reset-input;
  width:100%;
  font-size: $body-font-size;
  line-height: $line-global;
  padding:$line-global;
  border:$black-border;
  background-color:$color-accent;
  color:$white;
}

//utility class

.grid{
  display:grid;
  grid-column-gap: $gutter-global;
  grid-row-gap: $gutter-global;
}

.two-columns{
   grid-template-columns: 1fr 1fr;
}

.main-content{
  min-height: 100vh;
  padding: $gutter-global;
  width: calc(50% + #{$gutter-global});
  margin-left: auto;
}

.valign-center{
  display:flex;
  flex-direction:column;
  justify-content:center;
}

.valign-bottom{
  display:flex;
  flex-direction:column;
  justify-content:flex-end;

}

.sticky-sideimage{
  position:fixed;
  left:0;
  top: $gutter-global;
  bottom:$gutter-global;
  width: calc(50% - #{$gutter-global/2});
}

.sticky-sideimage img{
  width:100%;
  height:100%;
  object-fit: cover;
}

.headline{
  padding-bottom: $line-global * 3;
}

.singleproductimage{
  width:100%;
  height:100%;
}

.description-content{
  margin-top: $line-global;
}


.list-with-stroke{
  list-style-type: none;
}
.list-with-stroke li{
  padding: $line-global 0;
  border-top: $standard-border;

}

.list-with-stroke li:last-child{
  padding: $line-global 0;
  border-bottom: $standard-border;
}

.headline-big{
  font-size:22vw;
  line-height:1;
}

.link-to-cart{
  position:fixed;
  top:0;
  right:0;
  padding:$gutter-global;
  color: $color-text;
}

.link-to-cart .item-cart-count{
  display: none;
  font-size:0px;
  width:10px;
  height:10px;
  background-color:wheat;
  border-radius:100%;
}

.link-to-cart .cart-text{
  position:absolute;
  right:calc(100% - #{$gutter-global}/2);
  top:$gutter-global;
  white-space:nowrap;
  margin-top: 4px;
}

.link-to-cart:hover .cart-text{
  display:block;
}

.link-to-cart.cartfilled .item-cart-count{
  width:20px;
  height:20px;
  background:$color-accent;
  font-size: $label-font-size;
  line-height: $line-global;
  color:red;
  text-align: center;
  margin-top: 0px;

}


//Index Page CSS Files

#product-info{
  grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
  grid-row-gap:$gutter-global;
}


#add-to-cart .product-price{
  float:right;
}


